<%= form_for @subscriber, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
      <div>
        <h3 id="news_letter">ZeroStruct News Letter</h3>
      </div>
      <div class="input-prepend">
      <span class="add-on" style="color:black;">
        <i class="icon-envelope"></i>
      </span>
        <%= f.text_field :email, :class => 'text_field', :placeholder => "your-address@email.com" %>
      </div>
      <%= f.submit nil, :class => 'btn btn-warning', :value =>'Subscribe' %>
  </div>

<% end %>
